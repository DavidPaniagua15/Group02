<div class="card task d-flex flex-row justify-content-between">
        <a href="/api/tasks/{{id}}">
            <header>{{description}}</header>
        </a>
        <button class="task-edit p-2" data-task-id="{{id}}" data-tasklist-id="{{tasklist_id}}">
            <i class="fa-solid fa-pen-to-square"></i>
        </button>
        <button class="task-delete p-2" data-task-id="{{id}}" data-tasklist-id="{{tasklist_id}}">
            <i class="fa-solid fa-trash"></i>
        </button>
</div>