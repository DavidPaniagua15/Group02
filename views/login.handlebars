<!--Login section -->

<div class="d-flex flex-row">
    <div class="m-2 p-4 container">
        <div class="card">
            <h2>Login</h2>

            <form id="login-form">
                <div class="form-group">
                    <label for="email-login">Email:</label>
                    <input class="form-input" type="text" id="email-login" />

                </div>
                <div class="form-group">
                    <label for="password-login">Password:</label>
                    <input class="form-input" type="password" id="password-login" />

                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Login</button>
                </div>
            </form>
        </div>
    </div>

    <!--Setup section -->

    <div class="m-2 p-4 container">
        <div class="card">
            <h2>Setup An Account</h2>

            <form id="signup-form">
                <div class="form-group">
                    <label for="username-signup">Username:</label>
                    <input class="form-signup" type="text" id="username-signup" />

                </div>
                <div class="form-group">
                    <label for="email-signup">Email:</label>
                    <input class="form-signup" type="text" id="email-signup" />

                </div>
                <div class="form-group">
                    <label for="password-signup">Password:</label>
                    <input class="form-signup" type="password" id="password-signup" />

                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Signup</button>
                </div>
            </form>
        </div>
    </div>
</div>